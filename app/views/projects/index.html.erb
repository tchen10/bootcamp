<title>Projects</title>

<h1>Projects</h1>

<p><%= link_to 'Add a New Project', new_project_url %></p>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Team</th>
      <th>Due date</th>
      <th>Status</th>
      <th>Updated</th>
      <th>Tasks Completed</th>
      <th>Still To Go</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @projects.each do |project| %>
    <tr>
      <td><%= link_to project.title, project_url(project) %></td>
      <td><% project.users.each do |user| %>
      <p><%= link_to user.name, user_url(user) %><p>
      <% end %></td>
      <td><%= project.due_date %></td>
      <% if project.recent_status.present? %>
        <td><%= project.recent_status.description %></td>
        <td><%= project.recent_status.date %></td>
      <% else %>
        <td></td>
        <td></td>
        <td></td>
      <% end %>

      <td><%= link_to 'Edit', edit_project_url(project) %></td>
      <td><%= link_to 'Destroy', project_url(project), method: 'delete', data: { confirm: "Do you really want to delete this project?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

