<h1>Editing User #<%= @user.name %></h1>


<%= form_tag(user_url(@user), method: 'put') do %>

  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, @user.email %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= label_tag :pasword_confirmation %>
    <%= password_field_tag :password_confirmation %>
  </div>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @user.name %>
  </div>


  <div>
    <%= submit_tag "Update User" %>
  </div>

<% end %>
