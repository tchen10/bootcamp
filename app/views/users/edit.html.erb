<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
    <div class="alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= msg %>
    </div>
  <% end %>
<% end %>

<h1><%= @user.name %></h1>


<%= form_tag(user_url(@user), method: 'put') do %>

  <div>
    <%= label_tag :email, "Email:" %>
    <%= text_field_tag :email, @user.email %>
  </div>

  <div>
    <%= label_tag :password, "Password:" %>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= label_tag :password_confirmation, "Confirm Password:" %>
    <%= password_field_tag :password_confirmation %>
  </div>

  <div>
    <%= label_tag :name, "Display Name:" %>
    <%= text_field_tag :name, @user.name %>
  </div>

  <div>
    <%= label_tag :image_url, "Image URL:" %>
    <%= text_field_tag :image_url, @user.image_url %>
  </div>

  <div>
    <%= label_tag :home, "Home:" %>
    <%= text_field_tag :home, @user.home %>
  </div>

  <div>
    <%= label_tag :birthday, "Birthday:" %>
    <%= date_select :birthday, :birthday, :default => @user.birthday, :order => [:day, :month, :year], :start_year => Time.now.year-70, :end_year => Time.now.year-10  %>
  </div>

  <div>
    <%= label_tag :bio, "Bio Box:" %>
    <%= text_area_tag :bio, @user.bio %>
  </div>

  <div>
    <%= submit_tag "Update User" %>
  </div>

<% end %>
