<div class="span6 well">

<%= form_for @user do |f| %>

  <div>
    <%= f.label :email, "Email:" %>
    <%= f.text_field :email %>
  </div>


  <div>
    <%= f.label :name, "Display Name:" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :image_url, "Image URL:" %>
    <%= f.text_field :image_url %>
  </div>

  <div>
    <%= f.label :home, "Home:" %>
    <%= f.text_field :home %>
  </div>

  <div>
    <%= f.label :birthday, "Birthday:" %>
    <%= f.date_select :birthday, :order => [:day, :month, :year], :start_year => Time.now.year-70, :end_year => Time.now.year-10  %>
  </div>

  <div>
    <%= f.label :bio, "Bio Box:" %>
    <%= f.text_area :bio, :rows => 5 %>
  </div>

    <%= f.label :password, "Enter Your Password to Save Changes:" %>
    <%= f.password_field :password %> <a href="#", id="changepassword">Change Password</a>

  <div id="confirmpassword">
    <%= f.label :password_confirmation, "Confirm Your New Password:" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>

</div>

<script type="text/javascript">
$('#confirmpassword').hide();
$('#changepassword').click(function() {
  $(this).hide();
  $('#confirmpassword').show();
});
</script>
