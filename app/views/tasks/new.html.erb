<h1>New Task</h1>


<%= form_tag(tasks_url, method: 'post') do %>


  <div>
    <%= label_tag :milestone_id %>
    <%= select_tag :milestone_id, options_from_collection_for_select(Milestone.all, :id, :title) %>
  </div>

    <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>

  <div>
    <%= label_tag :date_created %>
    <%= date_select :date_created, :date_created, :default => Date.today, :order => [:day, :month, :year], :start_year => Time.now.year, :end_year => Time.now.year+2 %>
  </div>

  <div>
    <%= label_tag :due_date %>
    <%= date_select :due_date, :due_date, :default => Date.today+1, :order => [:day, :month, :year], :start_year => Time.now.year, :end_year => Time.now.year+2 %>
  </div>

  <div id="divdateselect" style="display: none;">
    <%= label_tag :date_completed %>
    <%= date_select :date_completed, :date_completed, :default => Date.today, :order => [:day, :month, :year], :start_year => Time.now.year, :end_year => Time.now.year+2 %>
  </div>

    <div>
    <%= label_tag :user_id %>
    <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name) %>
  </div>

  <div>
    <%= label_tag :status %>
    <%= text_field_tag :status %>
  </div>

  <%= hidden_field_tag :complete, "incomplete" %>


  <div>
    <%= submit_tag "Create Task", :notice => "Task created!" %>
  </div>
<% end %>
