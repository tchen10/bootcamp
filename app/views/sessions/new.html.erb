<style>
  #signin {
    padding-top: 50px;
    text-align: center;
  }
</style>

<div id="signin">

<%= form_tag sessions_url, :class => "form-horizontal" do %>

    <p><%= email_field_tag :email, nil, :placeholder => "Email" %></p>

    <p><%= password_field_tag :password, nil, :placeholder => "Password" %></p>

    <p><%= submit_tag "Sign In", :class => "btn btn-success" %></p>

<% end %>

</div>
